class UberPriceCalculator {
    constructor(baseFare, costPerMile, costPerMinute) {
        this.baseFare = baseFare;
        this.costPerMile = costPerMile;
        this.costPerMinute = costPerMinute;
    }

    calculateFare(distance, duration) {
        const distanceCost = distance * this.costPerMile;
        const durationCost = duration * this.costPerMinute;
        return this.baseFare + distanceCost + durationCost;
    }
}

const uberCalculator = new UberPriceCalculator(5, 1.5, 0.2);
const totalFare = uberCalculator.calculateFare(10, 20);
console.log("Total Fare:", totalFare);