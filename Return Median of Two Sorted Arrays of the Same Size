let findMedianSortedArrays = function(nums1, nums2) {
  let mergedArray = nums1.concat(nums2).sort((a, b) => a - b);
  let mid = Math.floor(mergedArray.length / 2);
  
  return mergedArray.length % 2 === 0
    ? (mergedArray[mid - 1] + mergedArray[mid]) / 2
    : mergedArray[mid];
};

// Example usage
let nums1 = [1, 3];
let nums2 = [2, 4];
let median = findMedianSortedArrays(nums1, nums2);
console.log(median);
